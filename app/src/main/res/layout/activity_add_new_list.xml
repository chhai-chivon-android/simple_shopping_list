<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gosiewski.shoppinglist.activities.AddNewListActivity">

    <EditText
        android:id="@+id/list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/list_name_hint" />

    <Button
        android:id="@+id/show_date_picker_button"
        android:onClick="showDataPickerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_name"
        android:text="@string/list_date_button"/>

    <EditText
        android:id="@+id/new_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_date_picker_button"
        android:hint="@string/item_name_hint" />

    <Button
        android:id="@+id/add_item_button"
        android:onClick="addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_item_name"
        android:text="@string/add_item_button"/>

    <Button
        android:id="@+id/save_list_button"
        android:onClick="saveList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_item_button"
        android:text="@string/save_list_button" />

    <android.support.v7.widget.RecyclerView
        android:paddingTop="15dp"
        android:id="@+id/item_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/save_list_button"/>


</RelativeLayout>
